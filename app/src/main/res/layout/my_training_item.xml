<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/my_training_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/my_training_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="哑铃全身循环"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingLeft="12dp"/>
        <TextView
            android:id="@+id/my_training_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="36分钟  K3"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:paddingRight="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="2dp">
        <TextView
            android:id="@+id/my_training_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="12dp"
            android:text="还未进行过训练  21人正在练"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/my_training_exist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="12dp"
            android:text="已下载"
            android:textSize="16sp"
            android:gravity="right"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>